<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.WordMessage" table="WordMessage" schema="dbo" catalog="demo">
        <id name="hwordMessageId">
            <column name="HwordMessageID" sql-type="int"/>
        </id>
        <property name="hwordMessage">
            <column name="HwordMessage" sql-type="varchar(1000)" length="1000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>